.block{ :style => "width: 500px; margin: auto; margin-bottom: 20px;", :id => dom_id(poll) }
  
  .even_larger.bold
    = poll.name
  
  .slightly_smaller
    == Ends on #{poll.ends_at}
    
    - if updatable(poll)
      = link_to "Edit", edit_poll_path(poll)
    
    - if deletable(poll)
      = link_to "Delete", poll_path(poll), :method => :delete, :confirm => "Are you sure?"
    
  %hr
  
  %p= auto_link expand poll.description

  %hr

  - if poll.can_by_voted_on_by(current_user)
    #cast_vote_div
      = render :partial => "vote", :locals => {:poll => poll}
  
  - if poll.has_already_voted?(current_user)
    #current_results_div
      = render :partial => "current_results", :locals => {:poll => poll}
      
  - unless poll.active?
    #winner_div
      = render :partial => "final_results", :locals => {:poll => poll}